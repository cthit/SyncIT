@using Microsoft.AspNetCore.Components.Sections
@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider IsDarkMode="true"/>
<MudPopoverProvider/>

@* Needed for dialogs *@
<MudDialogProvider/>

@* Needed for snackbars *@
<MudSnackbarProvider/>


<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" @onclick="ToggleDrawer"/>
        <MudText>
            SyncIT -
            <SectionOutlet SectionName="Title"/>
        </MudText>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Docked">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.SupervisedUserCircle">
                Account Sync
            </MudNavLink>
            <MudNavGroup Title="Settings" Icon="@Icons.Material.Filled.Settings">
                <MudNavLink Href="/Settings/AccountServices" Icon="@Icons.Material.Filled.Contacts">
                    Account Services
                </MudNavLink>
                <MudNavLink Href="/Settings/Additions" Icon="@Icons.Material.Filled.PersonAdd">
                    Additions
                </MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code
{
    private bool _drawerOpen;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
